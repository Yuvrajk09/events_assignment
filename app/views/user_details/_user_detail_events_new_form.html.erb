<%= form_with(model: @event_detail, local: true) do |f| %>

  <%= f.hidden_field :event_id, value: @user_detail.id %>

  <div class="form-group">
    <%= f.label :event_name %>

    <%= f.text_field :event_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_startdate %>

    <%= f.text_field :event_startdate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_start_time %>

    <%= f.text_field :event_start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_details %>

    <%= f.text_field :event_details, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_end_date %>

    <%= f.text_field :event_end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_end_time %>

    <%= f.text_field :event_end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_location %>

    <%= f.text_field :event_location, class: "form-control" %>
  </div>

  <%= f.submit "Create event detail", class: "btn btn-block btn-outline-secondary" %>
<% end %>
