<div class="card mb-3">
  <h2 class="card-header h4">
    User Detail #<%= user_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= user_detail.user_id %></dd>
      <!-- Display user_id end -->

      <dt>User email</dt>
      <!-- Display user_email start -->
      <dd><%= user_detail.user_email %></dd>
      <!-- Display user_email end -->

      <dt>User first name</dt>
      <!-- Display user_first_name start -->
      <dd><%= user_detail.user_first_name %></dd>
      <!-- Display user_first_name end -->

      <dt>Password</dt>
      <!-- Display password start -->
      <dd><%= user_detail.password %></dd>
      <!-- Display password end -->

      <dt>User last name</dt>
      <!-- Display user_last_name start -->
      <dd><%= user_detail.user_last_name %></dd>
      <!-- Display user_last_name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back user_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link user_detail start -->
      <div class="col">
        <%= link_to edit_user_detail_url(user_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link user_detail end -->

      <!-- Delete link user_detail start -->
      <div class="col">
        <%= link_to user_detail, method: :delete, data: { confirm: "Do you really want to delete this user_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link user_detail end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(user_detail.updated_at) %> ago
  </div>
</div>
