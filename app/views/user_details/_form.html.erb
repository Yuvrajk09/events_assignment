<% was_validated = user_detail.errors.any? %>

<%= form_with(model: user_detail, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = user_detail.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.number_field :user_id, class: user_class, placeholder: "Enter user" %>
    <% if user_was_invalid %>
      <% user_detail.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_email_class = "form-control" %>
    <% user_email_was_invalid = user_detail.errors.include?(:user_email) %>

    <% if was_validated %>
      <% if user_email_was_invalid %>
        <% user_email_class << " is-invalid" %>
      <% else %>
        <% user_email_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_email %>
    <%= f.text_field :user_email, class: user_email_class, placeholder: "Enter user email" %>
    <% if user_email_was_invalid %>
      <% user_detail.errors.full_messages_for(:user_email).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_first_name_class = "form-control" %>
    <% user_first_name_was_invalid = user_detail.errors.include?(:user_first_name) %>

    <% if was_validated %>
      <% if user_first_name_was_invalid %>
        <% user_first_name_class << " is-invalid" %>
      <% else %>
        <% user_first_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_first_name %>
    <%= f.text_field :user_first_name, class: user_first_name_class, placeholder: "Enter user first name" %>
    <% if user_first_name_was_invalid %>
      <% user_detail.errors.full_messages_for(:user_first_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% password_class = "form-control" %>
    <% password_was_invalid = user_detail.errors.include?(:password) %>

    <% if was_validated %>
      <% if password_was_invalid %>
        <% password_class << " is-invalid" %>
      <% else %>
        <% password_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :password %>
    <%= f.text_field :password, class: password_class, placeholder: "Enter password" %>
    <% if password_was_invalid %>
      <% user_detail.errors.full_messages_for(:password).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_last_name_class = "form-control" %>
    <% user_last_name_was_invalid = user_detail.errors.include?(:user_last_name) %>

    <% if was_validated %>
      <% if user_last_name_was_invalid %>
        <% user_last_name_class << " is-invalid" %>
      <% else %>
        <% user_last_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_last_name %>
    <%= f.text_field :user_last_name, class: user_last_name_class, placeholder: "Enter user last name" %>
    <% if user_last_name_was_invalid %>
      <% user_detail.errors.full_messages_for(:user_last_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
