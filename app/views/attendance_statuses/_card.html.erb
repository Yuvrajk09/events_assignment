<div class="card mb-3">
  <h2 class="card-header h4">
    Attendance Status #<%= attendance_status.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Attendance</dt>
      <dd>
        <% if @attendance_status.attendance.present? %>
          <%= link_to attendance_status.attendance, attendance_status.attendance %>
        <% end %>
      </dd>

      <dt>Status</dt>
      <dd><%= attendance_status.status %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back attendance_status, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_attendance_status_url(attendance_status), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to attendance_status, method: :delete, data: { confirm: "Do you really want to delete this attendance_status?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(attendance_status.updated_at) %> ago
  </div>
</div>
