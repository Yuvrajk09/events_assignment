<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendees

    <a data-toggle="collapse" href="#event_detail_attendees_new_form">
      Add attendee
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event_detail.attendees.each do |attendee| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to attendee, attendee %>

        <%= link_to attendee, method: :delete, data: { confirm: "Do you really want to delete this attendee" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_detail_attendees_new_form">
        <%= render partial: "event_details/event_detail_attendees_new_form" %>
      </div>
    </div>

  </ul>
</div>
