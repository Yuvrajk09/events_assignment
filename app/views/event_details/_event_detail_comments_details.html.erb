<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Comments Details

    <a data-toggle="collapse" href="#event_detail_comments_details_new_form">
      Add comments detail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event_detail.comments_details.each do |comments_detail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to comments_detail, comments_detail %>

        <%= link_to comments_detail, method: :delete, data: { confirm: "Do you really want to delete this comments_detail" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_detail_comments_details_new_form">
        <%= render partial: "event_details/event_detail_comments_details_new_form" %>
      </div>
    </div>

  </ul>
</div>
