<div class="card mb-3">
  <h2 class="card-header h4">
    Comments Detail #<%= comments_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Comments</dt>
      <!-- Display comments start -->
      <dd><%= comments_detail.comments %></dd>
      <!-- Display comments end -->

      <dt>Comment</dt>
      <!-- Display comment_id start -->
      <dd>
        <% if @comments_detail.event_comment.present? %>
          <%= link_to comments_detail.event_comment, comments_detail.event_comment %>
        <% end %>
      </dd>
      <!-- Display comment_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back comments_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link comments_detail start -->
      <div class="col">
        <%= link_to edit_comments_detail_url(comments_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link comments_detail end -->

      <!-- Delete link comments_detail start -->
      <div class="col">
        <%= link_to comments_detail, method: :delete, data: { confirm: "Do you really want to delete this comments_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link comments_detail end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(comments_detail.updated_at) %> ago
  </div>
</div>
